<resources>

    <style name="AppTheme" parent="@style/Base.V7.Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/ActionBarBaseStyle</item>
        <item name="toolbarStyle">@style/ActionBarBaseStyle</item>
        <item name="android:windowBackground">@color/layout_background</item>
        <!--去掉actionbar阴影 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarBaseStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="height">50dip</item>
    </style>

    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:textColor">@color/bottom_click</item>
    </style>

    <style name="MyStyle">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="QQPopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/right_top_in</item>
        <item name="android:windowExitAnimation">@anim/right_top_out</item>
    </style>

</resources>
