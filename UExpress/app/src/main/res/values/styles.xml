<resources>

    <style name="AppTheme" parent="@style/Base.V7.Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/ActionBarBaseStyle</item>
        <item name="toolbarStyle">@style/ActionBarBaseStyle</item>
        <item name="android:windowBackground">@color/layout_background</item>
        <!--去掉actionbar阴影 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarBaseStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="height">50dip</item>
    </style>

</resources>
